color green "#.*$"
color brightgreen "\|.*$"

syntax "texi" ".texi$"
color brightcyan "\((\\.|[^\"])*\)"
color yellow "(\{|\})"
color brightblue "\$"
color brightblack "\[(\\.|[^\"])*\]"
color brightyellow "@[.a-zA-Z_]*"
color cyan "^[[:space:]]*[.a-zA-Z_]*\:"
color brightred "@c[.a-zA-Z_]*"
color green "#.*$"


syntax "desktop" "\.desktop$"
color brightblue "\[(\\.|[^\"])*\]"
color yellow "=.*$"
color brightgreen "\="

syntax "lua" "\.lua$"
color brightwhite "[0-9]"
color cyan "local.*$"
color brightblack "\{|\}"
color brightgreen "\="
color red "\[|\]"
color yellow "\"(\\.|[^\"])*\""
