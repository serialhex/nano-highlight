color cyan "\((\\.|[^\"])*\)"
color cyan "@(\\.|[^\"])*@"
color brightblack "(\-[.a-z]*|\HAVE[.a-zA-Z_]*)"
color yellow "\/"
color brightblue ""(\\.|[^\"])*""
color brightyellow "(\$|dnl.*$)"
color green "#.*$"


syntax "spec" ".spec$"
color brightwhite "[0-9]"
color cyan "stub"
color yellow "pascal|stdcall|varargs|cdecl"
color brightyellow "\((\\.|[^\"])*\)"
color brightgreen "\@"
color green "#.*$"

syntax "configurelog" "config.log$"
color cyan "(\:.*$|\=.*$)"
